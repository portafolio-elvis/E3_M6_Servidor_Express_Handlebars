<!DOCTYPE html>
<html lang="es">
<head>
    {{> head}}
    <title>Dashboard - {{user.name}}</title>
</head>
<body>
    {{> header}}

    <header>
        <div class="container">
            <h1>Dashboard de Proyectos</h1>
        </div>
    </header>

    <main class="container py-5">
        <div class="row mb-4">
            <div class="col-12">
                <h2>Bienvenido, {{user.name}}</h2>
                {{#if user.isAdmin}}
                    <span class="admin-badge">Acceso de Administrador</span>
                {{/if}}
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <h3 class="mb-4">Tus Proyectos</h3>
            </div>
        </div>

        <div class="row g-4">
            {{#each projects}}
                <div class="col-lg-6">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span>{{this.name}}</span>
                            {{#if this.isCompleted}}
                                <span class="badge bg-white text-black">Completado</span>
                            {{else}}
                                <span class="badge badge-progress">En Progreso</span>
                            {{/if}}
                        </div>
                        <div class="card-body">
                            {{#if this.tasks.length}}
                                <p class="text-uppercase fw-bold small mb-3">Tareas:</p>
                                <ul class="task-list">
                                    {{#each this.tasks}}
                                        <li>
                                            <span class="{{priorityClass this.priority}}">{{this.priority}}</span>
                                            <span class="ms-2">{{this.description}}</span>
                                        </li>
                                    {{/each}}
                                </ul>
                            {{else}}
                                <p class="text-muted mb-0">Este proyecto no tiene tareas asignadas todav√≠a.</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <hr>
                <div class="row g-4 text-center">
                    <div class="col-md-4">
                        <div class="p-4 border border-3 border-dark">
                            <h2 class="mb-0 border-0">{{projects.length}}</h2>
                            <p class="text-uppercase fw-bold mb-0">Proyectos</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-4 bg-black text-white">
                            <h2 class="mb-0 border-0 text-white">{{user.name}}</h2>
                            <p class="text-uppercase fw-bold mb-0">Usuario</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-4 border border-3 border-dark">
                            <h2 class="mb-0 border-0">2025</h2>
                            <p class="text-uppercase fw-bold mb-0">Activo</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    {{> footer}}
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
